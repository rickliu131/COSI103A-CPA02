<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Online Bulletin Board App</title>
  </head>
  <body>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <div class="container m-5">
      <h1>Online Bulletin Board</h1>

      <div class="mt-3 mb-1">
        <a href="/?show=1"><button type="button" class="btn btn-primary">Add New Post</button></a>
      </div>

      <div class="mt-2 mb-3">
        <a href="/delete_all"><button type="button" class="btn btn-danger">Delete All Posts</button></a>
      </div>

      <% if (showAddPostInput) { %>
        <div class="m-3">
          <form method="post" action="/add_post">
            <div class="form-floating">
              <textarea name="text" class="form-control" placeholder="Hello, World!" id="post_text" style="height: 100px"></textarea>
              <label for="post_text">Content..</label>
            </div>
            <div class="mt-2 form-floating">
              <textarea name="author" class="form-control" placeholder="Rick" id="post_author"></textarea>
              <label for="post_author">Author..</label>
            </div>
            <button type="submit" class="mt-3 btn btn-success">Submit</button>
            <a href="/"><button type="button" class="mt-3 btn btn-secondary">Cancel</button></a>
          </form>
        </div>
      <% } %>

      <div class="d-grid gap-2">
        <% for (post of posts) { %>
          <div class="p-3 bg-light blockquote border border-2 border-success rounded">
            <%= post.text %>
            <footer class="mt-1 blockquote-footer"><%= post.author %></footer>
          </div>
        <% } %>
      </div>
    </div>

  </body>
</html>
